<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">

            <corners
                android:bottomLeftRadius="@dimen/item_room_corners_radius"
                android:bottomRightRadius="@dimen/item_room_corners_radius" />
            <solid android:color="@android:color/white" />

        </shape>
    </item>

    <item
        android:bottom="-2dp"
        android:left="-2dp"
        android:right="-2dp">
        <shape>
            <stroke
                android:width="0.4dp"
                android:color="@color/textGrey" />
        </shape>
    </item>

</layer-list>
