<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">

            <corners
                android:topLeftRadius="@dimen/item_room_corners_radius"
                android:topRightRadius="@dimen/item_room_corners_radius" />
            <solid android:color="@color/freeTrans" />

        </shape>
    </item>

    <item
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape>
            <stroke
                android:width="@dimen/item_room_bottom_stroke"
                android:color="#FFB1F3DC" />
        </shape>
    </item>

</layer-list>
