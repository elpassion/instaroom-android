<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="TextWhite">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ItemRoomStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ItemRoomMeetingTextStyle" parent="TextWhite" />

    <style name="ItemRoomNextMeetingTextStyle" parent="TextWhite">
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ItemRoomTimeUnitStyle" parent="TextWhite" />

    <style name="ItemRoomButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:layout_height">46dp</item>
    </style>

    <style name="ItemRoomButton.BookInstant">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ItemRoomButton.BookLater">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ItemRoomStatus">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:minWidth">72dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ItemRoomStatus.Occuped">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="ItemRoomStatus.Free">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="ItemRoomMeetingTimeStyle">
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ItemRoomMeetingTimeUnitStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginStart">@dimen/tiny_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="Button.White">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/background_black_button</item>
    </style>

    <style name="Button.Black">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/background_black_button</item>
    </style>
</resources>
